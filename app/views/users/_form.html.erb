<%= form_with(model: user, url: users_path, html: {multipart: true, onsubmit: "return false"} ) do |form| %>
  <%= render "error_messages", resource: form.object %>
  <% if params[:action] == 'new' %>
        <div id="accountContent" role="tabpanel" class="bs-stepper-pane active dstepper-block" aria-labelledby="accountBtn">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :username, class: "form-control-label" %>
                <%= form.text_field :username, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Name</label>
            <input type="email" class="form-control" id="exampleInputName1" placeholder="Enter your name">
          </div>
          <a class="btn btn-primary next-stepper">Next</a>
        </div>
        <div id="accountProfileContent" role="tabpanel" class="bs-stepper-pane" aria-labelledby="accountProfileBtn">
          <div class="form-group">
            <label for="exampleInpuAddress1">Address</label>
            <input type="email" class="form-control" id="exampleInpuAddress1" placeholder="Enter your address">
          </div>
          <a class="btn btn-primary next-stepper">Next</a>
        </div>
        <div id="accountAdditionalContent" role="tabpanel" class="bs-stepper-pane text-center" aria-labelledby="accountAdditionalBtn">
          <button type="submit" class="btn btn-primary mt-5">Submit</button>
        </div>

  <% end %>

  <%= form.file_field :avatar, as: :file %>  

<div class="row">
        <div class="col-md-6 flex justify-between items-center">
        <%= form.button class: "btn btn-default" %>

        <% if form.object.persisted? %>
        <%= link_to 'Delete', form.object, class: "btn btn-default", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
        <% end %>
    </div>
</div>
<% end %>
