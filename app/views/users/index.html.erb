<% content_for :new_button do %>
  <%= link_to 'New', new_user_path, class: "btn btn-sm btn-primary", data: { turbolinks: 'false' } %>
<% end %>

<div class="container-fluid mt--6">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header border-0">
          <div class="row">
            <div class="col-6">
              <h3 class="mb-0">Users</h3>
            </div>
            <div class="col-6 text-right">
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table align-items-center table-flus">
            <thead class="thead-light">
              <tr>
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">NIP</th>
                <th scope="col">Email</th>
                <th scope="col">Medical Staff</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th scope="row"><%= user.username %></th>
                  <td><%= user.first_name %> <%= user.last_name %></td>
                  <td><%= user.nip %></td>
                  <td><%= user.email %></td>
                  <td><%= user.medical_staff %></td>
                  <td class="text-right">
                    <div class="dropdown">
                      <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v"></i>
                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        <%= link_to "Detail", user, class: "dropdown-item" %>
                        <%= link_to "Edit", edit_user_path(user), class: "dropdown-item", data: {turbolinks: false} %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
