<%= form_with(model: department, class: "needs-validation", novalidate: "novalidate") do |form| %>
  <%= render "error_messages", resource: form.object %>

<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            <%= form.label :name, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.text_field :name, class: "form-control", required: true %>
                <div class="valid-feedback">
                    Nice!
                </div>
                <div class="invalid-feedback">
                    Required!
                </div>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :current_level, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :current_level, class: "form-control text-right", required: true %>
                <div class="valid-feedback">
                    Nice!
                </div>
                <div class="invalid-feedback">
                    Required!
                </div>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :level1, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level1, class: "form-control text-right" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :level2, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level2, class: "form-control text-right" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :level3, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level3, class: "form-control text-right" %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group row">
            <%= form.label :level4, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level4, class: "form-control text-right" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :level5, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level5, class: "form-control text-right" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :level6, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.number_field :level6, class: "form-control text-right" %>
            </div>
        </div>
        <div class="form-group row">
            <%= form.label :path, class: "col-md-4 col-lg-3 col-xl-2 col-form-label form-control-label" %>
            <div class="col-md-8 col-lg-9 col-xl-10">
                <%= form.text_field :path, class: "form-control", required: true %>
                <div class="valid-feedback">
                    Nice!
                </div>
                <div class="invalid-feedback">
                    Required!
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row align-items-center">
    <div class="col-lg-6 col-6">
        <%= content_for?(:back_button) ? yield(:back_button) : '' %>
    </div>
    <div class="col-lg-6 col-6 text-right">
        <%= submit_tag "Create", class: "btn btn-primary text-right", formnovalidate: true %>

        <% if form.object.persisted? %>
            <%= link_to 'Delete', form.object, class: "btn btn-default", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
        <% end %>
    </div>
</div>
<% end %>